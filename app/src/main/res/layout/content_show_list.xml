<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ShowListActivity"
    tools:showIn="@layout/activity_show_list">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_of_the_items_is_following"
        android:gravity="center"
        android:id="@+id/headingTextView"
        android:textSize="@dimen/heading_text_size"
        android:layout_margin="@dimen/safe_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listOfDatabaseItem"
        android:layout_marginHorizontal="@dimen/safe_margin" />

</LinearLayout>